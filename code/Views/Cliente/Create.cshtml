@model ClienteModel

@{
    ViewData["Title"] = "Criar Cliente";
}

<div class="text-center">
    <h1 class="text-white">Criar Cliente</h1>
</div>

<form asp-controller="Cliente" asp-action="Create" method="post" class="text-light">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="NmCliente" class="form-control" placeholder="Digite o nome do cliente">
        @Html.ValidationMessageFor(x => x.NmCliente)
    </div>

    <div class="form-group">
        <label for="cidade">Cidade</label>
        <input type="text" asp-for="Cidade" class="form-control" placeholder="Digite o nome da cidade">
        @Html.ValidationMessageFor(x => x.Cidade)
    </div>
        
    <div class="d-md-flex flex-column mt-4 gap-2">
        <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
        <a class="btn btn-secondary btn-block" asp-controller="Cliente" asp-action="Index" role="button">Voltar</a>
    </div>
</form>