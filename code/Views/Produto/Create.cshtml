@model ProdutoModel

@{
    ViewData["Title"] = "Criar Produto";
}

<div class="text-center">
    <h1 class="text-white">Criar Produto</h1>
</div>

<form asp-controller="Produto" asp-action="Create" method="post" class="text-light">
    <div class="form-group">
        <label for="name">Descrição</label>
        <input type="text" asp-for="DscProduto" class="form-control" placeholder="Digite a descrição do produto">
        @Html.ValidationMessageFor(x => x.DscProduto)
    </div>

    <div class="form-group mt-2">
        <label for="name">Valor Unitário</label>
        <input type="text" asp-for="VlrUnitario" class="form-control" placeholder="Digite o valor do produto">
        @Html.ValidationMessageFor(x => x.VlrUnitario)
    </div>

    <div class="d-md-flex flex-column mt-4 gap-2">
        <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
        <a class="btn btn-secondary btn-block" asp-controller="Produto" asp-action="Index" role="button">Voltar</a>
    </div>
</form>