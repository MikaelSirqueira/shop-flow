@model ProdutoModel
@{
    ViewData["Title"] = "Editar Produto";
}

<div class="text-center">
    <h1 class="text-white">Editar Produto</h1>
</div>


<form asp-controller="Produto" asp-action="SaveEdit" method="post" class="text-light">
    <input type="hidden" asp-for="IdProduto" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label for="nome">Descrição</label>
        <input type="text" asp-for="DscProduto" class="form-control" placeholder="Digite a descrição do produto">
        @Html.ValidationMessageFor(x => x.DscProduto)
    </div>

    <div class="form-group">
        <label for="nome">Valor Unitário</label>
        <input type="number" asp-for="VlrUnitario" class="form-control number-type" placeholder="Digite o valor do produto">
        @Html.ValidationMessageFor(x => x.VlrUnitario)
    </div>

    <div class="d-md-flex flex-column mt-4 gap-2">
        <button type="submit" class="btn btn-primary btn-block">Salvar</button>
        <a class="btn btn-secondary btn-block" asp-controller="Produto" asp-action="Index" role="button">Voltar</a>
    </div>
</form>

