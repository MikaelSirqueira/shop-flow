@model List<VendaModel>
@{
    ViewData["Title"] = "Listagem de Vendas";
}

<main class="text-center text-light">
    <div class="d-md-flex justify-content-between mb-4">
        <a class="btn btn-primary align-content-center" role="button" asp-controller="Venda" asp-action="Create">Adicionar nova venda</a>       
    </div>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success mb-2" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger mb-2" role="alert">
            @TempData["MensagemErro"]
        </div>
    }

    <h1 class="text-white">Listagem de Vendas</h1>
    <table id="table-format" class="table text-white-50">
        <thead>
            <tr class="text-white">
                <th scope="col">#</th>
                <th scope="col">Cliente</th>
                <th scope="col">Produto</th>
                <th scope="col">Quantidade</th>
                <th scope="col">Valor Unitário</th>
                <th scope="col">Data da Venda</th>
                <th scope="col">Valor Total</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (VendaModel venda in Model)
                {
                    <tr>
                        <th scope="row">@venda.IdVenda</th>
                        <td>@venda.Cliente.NmCliente</td>
                        <td>@venda.Produto.DscProduto</td>
                        <td>@venda.QtdVenda</td>
                        <td>@venda.VlrUnitarioVenda</td>
                        <td>@venda.DthVenda</td>
                        <td>@venda.VlrTotalVenda</td>
                        <td>
                            <div class="btn-group gap-2" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@venda.IdVenda" asp-controller="Venda" asp-action="Edit">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@venda.IdVenda" asp-controller="Venda" asp-action="ConfirmDelete">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</main>
