@model VendaModel

@{
    ViewData["Title"] = "Criar Venda";
}

<div class="text-center">
    <h1 class="text-white">Criar Venda</h1>
</div>

<form asp-controller="Venda" asp-action="Create" method="post" class="text-light">
    <div class="form-group">
        <label for="cliente">Cliente</label>
        <select asp-for="IdCliente" class="form-control">
            <option value="">Selecione um cliente</option>
            @foreach (var cliente in ViewBag.Clientes)
            {
                <option value="@cliente.IdCliente">@cliente.NmCliente</option>
            }
        </select>
        @Html.ValidationMessageFor(x => x.IdCliente)
    </div>

    <div class="form-group mt-2">
        <label for="produto">Produto</label>
        <select asp-for="IdProduto" class="form-control">
            <option value="">Selecione um produto</option>
            @foreach (var produto in ViewBag.Produtos)
            {
                <option value="@produto.IdProduto">@produto.DscProduto</option>
            }
        </select>
        @Html.ValidationMessageFor(x => x.IdProduto)
    </div>

    <div class="form-group mt-2">
        <label for="quantidade">Quantidade</label>
        <input type="number" asp-for="QtdVenda" class="form-control" placeholder="Digite a quantidade">
        @Html.ValidationMessageFor(x => x.QtdVenda)
    </div>

    <div class="form-group mt-2">
        <label for="valor">Valor Unitário</label>
        <input type="number" asp-for="VlrUnitarioVenda" class="form-control" placeholder="Digite o valor unitário" step="0.01">
        @Html.ValidationMessageFor(x => x.VlrUnitarioVenda)
    </div>

    <div class="form-group mt-2">
        <label for="data">Data da Venda</label>
        <input type="datetime-local" asp-for="DthVenda" class="form-control">
        @Html.ValidationMessageFor(x => x.DthVenda)
    </div>

    <div class="d-md-flex flex-column mt-4 gap-2">
        <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
        <a class="btn btn-secondary btn-block" asp-controller="Venda" asp-action="Index" role="button">Voltar</a>
    </div>
</form>
